@model prjMeetingRoomBooking.Models.TUser

@{
    ViewData["Title"] = "會議室預約系統";
    Layout = "Login";
}
@section Styles{
    <style>
        .mb20 {
            margin-bottom:20px;
        }
        
        form input.inline {
            width: 50%;
            display: inline;
        }

        form select.inline {
            width: 49%;
            display: inline;
        }

        form label.inline {
            display: inline;
            font-weight: bold;
        }
        .row>div {           
            margin: 30px auto;
        }

        .btnDiv {
            display:flex;
            flex-direction:row-reverse;
            
        }
        .btn {
            margin-left:10px;
        }
        .table{
            margin:30px auto;
        }

        .txtTitle{
            text-align:center;
        }
    </style>
}

<h3 class="txtTitle">登入</h3>
<hr />
<div class="row">
        <div class="col-md-8 col-xl-6">
        <form asp-action="Index" id="LoginForm">                     
            <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <input asp-for="UserId" class="form-control mb20" />
                
            </div>
            <div class="form-group">
                    <label asp-for="UserPwd" class="control-label"></label>
                    <input asp-for="UserPwd" class="form-control mb20" />
               
            </div>            
            <div class="form-group btnDiv">
                <input type="submit" id="btnSubmit" value="送出" class="btn btn-primary" />
                <input type="reset" value="重設" class="btn btn-primary" />
                <span class="check text-danger"></span>
            </div>
        </form>
    </div>
</div>
<div>
        
</div>



@section Scripts {
    <script>
        $(function(){
            $('#btnSubmit').click(function(){
                event.preventDefault();
                $('span.check').text('');
                $('#btnSubmit').attr('disabled', 'disabled');
                let UserId = $('[name=UserId]').val().trim();
                let UserPwd = $('[name=UserPwd]').val().trim();
                if (UserId == '' || UserPwd == '') {
                    $('span.check').text('請輸入完整的帳號和密碼');
                    $('#btnSubmit').removeAttr('disabled');
                    return false;
                }else{
                    $.ajax({
                        url: `@Url.Content("~/Booking/checkUserPwd")`,
                        type: 'post',
                        data: {
                            data: JSON.stringify({
                                UserId: UserId,
                                UserPwd: UserPwd
                            })
                        },                        
                        dataType: 'json',
                        success: function (result) {
                            //console.log(result);
                            if (`${result}`.indexOf('error') < 0) {
                                if (`${result}` == 't')
                                    $('#LoginForm').submit();
                                else if (`${result}` == 'f')
                                    $('span.check').text('帳號或密碼錯誤');
                            }
                            else {
                                console.log(result);
                                alert('格式錯誤');
                            }
                        }
                    }).done(function(msg){
                        $('#btnSubmit').removeAttr('disabled');
                    });
                }
                
            });
            
        });
    </script>
}
