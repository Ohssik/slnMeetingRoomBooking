@model prjMeetingRoomBooking.ViewModels.CBooking

@{
    ViewData["Title"] = "會議室預約系統";
    Layout = "_Layout";
}
@section Styles{
    <style>
        .mb20 {
            margin-bottom:20px;
        }
        
        form input.inline {
            width: 50%;
            display: inline;
        }

        form select.inline {
            width: 49%;
            display: inline;
        }

        form label.inline {
            display: inline;
            font-weight: bold;
        }
        .row>div {           
            margin: 30px auto;
        }

        .btnDiv {
            display:flex;
            flex-direction:row-reverse;
            
        }
        .btn {
            margin-left:10px;
        }
        .table{
            margin:30px auto;
        }

        .txtTitle{
            text-align:center;
        }
    </style>
}

<h3 class="txtTitle">登入</h3>
<hr />
<div class="row">
        <div class="col-md-8 col-xl-6">
        <form asp-action="Index">                     
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                    <input asp-for="Subject" class="form-control mb20" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingUserId" class="control-label"></label>
                    <input asp-for="BookingUserId" class="form-control mb20" />
                <span asp-validation-for="BookingUserId" class="text-danger"></span>
            </div>            
            <div class="form-group btnDiv">
                <input type="submit" value="確認" class="btn btn-primary" />
                <input type="reset" value="重設" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
        
</div>



